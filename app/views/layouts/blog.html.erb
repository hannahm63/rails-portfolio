<!DOCTYPE html>
<html>
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %> | Hannah Melton</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
   
    <meta name="keywords" content="<%= @seo_keywords %>">

    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/blog_nav' %>

  <!-- start header -->
   <header class="blog-header py-3">
     <div class="row flex-nowrap justify-content-between align-items-center">
       <div class="col-12 text-center">
         <a class="blog-header-logo text-dark" href="#">My Blog</a>
       </div>
     </div>
     <br>
     <div class="row">
       <div class="col-12 text-center">
         <%= link_to 'New Blog', new_blog_path if logged_in?(:site_admin) %>
       </div>
     </div>
   </header>
   <!-- end header -->

     <div class="container">
       <div class="row">
      

         <%= yield %>

         <%= render 'shared/blog_sidebar' %>

       </div>

         <!-- start of footer -->
         <footer class="blog-footer">
           <p>Blog template built for <a href="https://getbootstrap.com/">Bootstrap</a> by <a href="https://twitter.com/mdo">@mdo</a>.</p>
           <p>
             <a href="#">Back to top</a>
           </p>
         </footer>
         <!-- end of footer -->

         <%= source_helper("blog") %>

     </div>

  </body>
</html>
